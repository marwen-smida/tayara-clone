{% extends 'base.html.twig' %}

{% block title %}Tayara - Toutes les annonces{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Annonces</h1>
        <div class="row">
            {% for ad in ads %}


                {% set url = path('show_ad', {'slug': ad.slug}) %}

                <div class="col-md-4">
                    <div class="card bg-light mb-3">
                        <div class="card-header text-center">
                            <strong>{{ ad.price }} TND</strong> <br>
                            <small>Pas encore not√©</small>
                        </div>
                        <a href="{{ url }}">
                            <img src="{{ ad.coverImage }}" alt="chargement en cours"
                                 style="height: 200px; width: 100%; display: block;">
                        </a>

                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="{{ url }}">
                                    {{ ad.title }}
                                </a>
                            </h4>
                            <p class="card-text">
                                {{ ad.intro }}
                            </p>
                            <a href="{{ url }}" class="btn btn-success">Contacter</a>
{#                            {% if app.user and app.user == ad.author %}#}
{#                                <a href="{{ path('ads_edit', {'slug': ad.slug}) }}" class="btn btn-warning">Modifier l'annonce</a>#}
{#                            {% endif %}#}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>


    </div>
{% endblock %}